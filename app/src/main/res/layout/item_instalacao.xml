<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingLeft="16dp"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="4dp"
    android:clickable="false"
    android:background="@drawable/shape"
    android:backgroundTint="#54c9ff">



    <ImageView
        android:layout_alignParentLeft="true"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginRight="6dp"
        android:id="@+id/iv_instalacao"
        android:src="@drawable/loggerinstalado"/>


    <TextView
        android:shadowColor="#0070a4"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"

        android:id="@+id/tv_instalacaoNumLogger"
        android:textColor="@color/primary_text"
        android:layout_toRightOf="@id/iv_instalacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingRight="16dp"
        android:textSize="@dimen/txt_listas_principal"
        android:text="232" />

    <TextView
        android:id="@+id/tv_instalacaoRua"
        android:textColor="@color/primary_text"
        android:layout_below="@id/tv_instalacaoNumLogger"
        android:layout_alignLeft="@id/tv_instalacaoNumLogger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingRight="16dp"
        android:textSize="@dimen/txt_listas_secundario"
        android:text="Rua Aquarius, 1101" />

</RelativeLayout>